<div class="modifyUser">
    <p id="error">{{error}}</p>
    <form method="POST" action="/modifyInfo" id="modifyInfo">
        <label for="user">User Name:</label>
        <input id="user" type="text" readonly="readonly" name="user" value={{user}}></br>
        <label for="password">Password:</label>
        <input id="password" type="password" name="password"/></br>
        <label for="firstName">First Name:</label>
        <input id="first" type="text" name="firstName"/></br>
        <label for="lastName">Last Name:</label>
        <input id="last" type="text" name="lastName"/></br>
        <label for="email">Email:</label>
        <input id="email" type="email" name="email"/></br>
        <button type="submit">Submit</button>
    </form>
</div>
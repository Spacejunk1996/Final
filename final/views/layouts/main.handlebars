<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/public/css/site.css">
</head>
<header>
    <h1>{{title}}</h1>
    <title>{{title}}</title>
</header>
<body>
    <nav class="User">
        <ul>
            {{#each status}}
            <li>
                <a href={{link}}>{{content}}</a>
            </li>
            {{/each}}
        </ul>
    </nav>
    <form method="POST" action="/tabs/search" id="search">
        <input type="text" name="name">
        <button type="submit">Search</button>
    </form>
    <main>
        {{{body}}}
    </main>
</body>
</html>